<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/logos/FAVICON_2_ROJO.png" type="image/png">
    <script src="https://code.iconify.design/2/2.0.4/iconify.min.js"></script>
    <link rel="stylesheet" href="/css/editar.css">
    <title>Editar Producto</title>
</head>

<body>
    <!-- HEADER -->
    <header>
        <%- include ('./partials/header-red')%>
    </header>
    <main>
        <div class="box">
            <div class="container" id="container">
                <div class="container-form add-container">
                    <h2>Editar producto</h2>
                    <% let id=articuloAEditar.id %>
                    <form action="/editarProducto/<%=id%>/edit?_method=PUT" method="POST" enctype="multipart/form-data" >
                        <div class="editProduct-container">
                            <div class="product-name space">
                                <label for="nombre">Nombre producto:</label>
                                <input type="text" name="nombre" value="<%=articuloAEditar.nombre%>">
                            </div>
                            <% if(locals.errors && errors.product) { %>
                                <%= errors.product.msg %>
                            <% } %>
                            <div class="product-category space">
                                <label for="product-price">Categoria:</label>
                                <select name="select"> 
                                    <%for(let i=0; i<categorias.length; i++){%>
                                        <option value="<%=[i+1]%>"><%=categorias[i].categoria%></option>
                                    <%} %>
                                </select>
                            </div>
                            <div class="product-price space">
                                <label for="precio">Precio:</label>
                                <input type="text" name="precio" value="<%=articuloAEditar.precio%>.00">
                            </div>
                            <div class=text-danger style="color: rgb(170, 23, 23);">
                                <% if(locals.errors && errors.price) { %>
                                    <%= errors.price.msg %>
                                <% } %>
                            </div>
                            <div class="image_content">
                                    <img src="<%=image%>" alt="" name="imagenValue">
                            </div>
                            <div class="">
                                <input type="file" name="file">
                            </div>
                            <div class="product-description space">
                                <label for="descripcion">Descripci√≥n:</label>
                                <textarea name="descripcion" value="<%=articuloAEditar.descripcion%>"><%=articuloAEditar.descripcion%></textarea>
                            </div>
                            <div class=text-danger style="color: rgb(170, 23, 23);">
                                <% if(locals.errors && errors.description) { %>
                                    <%= errors.description.msg %>
                                <% } %>
                            </div>
                            <div class="btn">
                                    <button type="submit">Actualizar</button>
                                <div class="btn-right">
                                    <a href="/dashboard"><button type="reset">Volver</button></a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

</body>

</html>