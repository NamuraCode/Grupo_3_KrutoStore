<body>
    <!-- ------------------------------- HEADER -------------------------------- -->
    <header>
        <section>
            <div class="top-bar">
            </div>
            <div class="logo-kruto">
                <!-- <img class="mascota" src=".\images\logos\MASCOTA_BLANCO.png"> -->
                <a href="/"><img class="logo" src="\images\logos\logo-kruto-rojo.png" alt="kruto_rojo"></a>
            </div>
        </section>
    </header>

    <!-- ----------------------------- FORMULARIO ------------------------------ -->
    <main>
        <div class="hero">
            <div class="form-box">
                <div class="button-box">
                    <div id="btn"></div>
                    <a href="/user/login">
                        <button type="button" class="toggle-btn" onclick="login()">Login</button>
                    </a>
                    <a href="/register">
                        <button type="button" class="toggle-btn" onclick="register()">Sing Up</button>
                    </a>
                </div>
                <div class="social-icons">
                    <img src="/images/productos/google.png">
                    <img src="/images/productos/facebook.png">
                    <img src="/images/productos/twitter.png">
                </div>
                <!-- -------------------------------- LOGIN -------------------------------- -->
                <form id="login" action="/user/login" class="input-group" method="post">
                    <input type="text" class="input-field" name="username" placeholder="username">
                    <div class=text-danger style="color: rgb(170, 23, 23);">
                        <% if(locals.errors && errors.username) { %>
                        <%= errors.username.msg %>
                        <% } %>
                        <% if(locals.errores && errores.problemUser) { %>
                        <%= errores.problemUser %>
                        <% } %>
                    </div>
                    <input type="password" class="input-field" name="password" placeholder="password">
                    <div class=text-danger style="color: rgb(170, 23, 23);">
                        <% if(locals.errors && errors.password) { %>
                            <%= errors.password.msg %>
                        <% } %>
                        <% if(locals.errores && errores.problemPass) { %>
                            <%= errores.problemPass %>
                        <% } %>
                    </div>
                    <input type="checkbox" class="check-box" name="checkbox"><span>Recordarme</span>
                    <button type="submit" class="submit-btn">Login</button>
                </form>
                <!-- ------------------------------ REGISTER ------------------------------- -->
                <!-- <form id="register" action="#" class="input-group">
                    <input type="text" class="input-field" placeholder="username" required>
                    <input type="email" class="input-field" placeholder="email" required>
                    <input type="password" class="input-field" placeholder="password" required>
                    <input type="checkbox" class="check-box"><span>I agree the terms & conditions</span>
                    <button type="submit" class="submit-btn">Register</button>
                    </form> -->
            </div>
        </div>
    </main>

    <!-- -------------------------------- MENU --------------------------------- -->
    <footer>
        <div class="menu">
            <nav>
                <ul>
                    <li><a href="/index"><span class="iconify" data-icon="cil:home"></span></a></li>
                    <li><a href="/products"><span class="iconify" data-icon="bx:bx-store"></span></a></li>
                    <li><a href="/productCart"><span class="iconify"
                                data-icon="ic:baseline-local-grocery-store"></span></a></li>
                    <li><a href="#"><span class="iconify" data-icon="ant-design:search-outlined"></span></a></li>
                    <li><a href="/user/login"><span class="iconify" data-icon="gg:profile"></span></a></li>
                </ul>
            </nav>
        </div>
    </footer>

    <script>
        let x = document.getElementById("login");
