<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    rel="stylesheet" />

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <link rel="shortcut icon" href="./images/logos/FAVICON_2_ROJO.png" type="image/png">
    
    <title>Kruto Store</title>
</head>

<body>
<!-- ------------------------------- HEADER -------------------------------- -->
    <header>
        <section>
            <div class="top-bar">""
            </div>
            <div class="logo-kruto">
                <!-- <img class="mascota" src=".\images\logos\MASCOTA_BLANCO.png"> -->
                <img class="logo" src=".\images\logos\logo-kruto-rojo.png" alt="kruto_rojo">
            </div>
        </section>
    </header>
    <main>

        <!---------------------------------------SLIDESHOW---------------------------------------------->

        <div id="slider">
            <figure>
                <img src=".\images\productos\slide1.png">
                <img src=".\images\productos\slide2.png">
                <img src=".\images\productos\slide3.png">
                <img src=".\images\productos\slide4.png">
                <img src=".\images\productos\slide5.png">
            </figure>
        </div>

<!-- ------------------------------- BRANDS -------------------------------- -->

        <div class="marcas">
            <div class="brands">
                <img src=".\images\productos\disney.png">
                <img src=".\images\productos\funko.png">
                <img src=".\images\productos\naruto.png">
                <img src=".\images\productos\star wars.png">
                <img src=".\images\productos\harrypotter.png">
                <img src=".\images\productos\marvel-logo.png" class="marvel">
                <img src=".\images\productos\simpsons.png">
            </div>
        </div>


<!-- ------------------------------- OFERTAS ------------------------------- -->
        <section id="marquee">
            <div class="ofertas">
                <h2 class="ofert-title">OFERTAS EXCLUSIVAS</h2>
                <div class="pic-container">
                    <div class="pic">
                    </div>
                        <img src=".\images\productos\nya1.png">
                    <div class="pic">
                        <img src=".\images\productos\nya2.png">
                    </div>
                    <div class="pic">
                        <img src=".\images\productos\nya3.png">
                    </div>
                    <div class="pic">
                        <img src=".\images\productos\nya4.png">
                    </div>
                    <div class="pic">
                        <img src=".\images\productos\nya5.png">
                    </div>
                    <div class="pic">
                        <img src=".\images\productos\nya6.png">
                    </div>
                    <div class="pic">
                        <img src=".\images\productos\nya7.png">
                    </div>
                    </div>
                </div>
            </div>
        </section>


<!-- ----------------------------- CATEGORIAS ------------------------------ -->
        <section class="category">
            <div id="category-title">
                <h3 class="category-title">NUESTRAS CATEGORIAS</h3>
            </div>
            
            <div id="categories">
                <div>
                    <img class="gif1" src=".\images\productos\gif1.gif">
                    <div class="category-name">
                        <a href="/products"><p>TV SHOWS</p></a>
                    </div>
                </div>
                <div>
                    <img src=".\images\productos\gif2.gif" class="gif2">
                    <div class="category-name">
                        <a href="/products"><p>PELICULAS</p></a>
                    </div>
                </div>
                <div>
                    <img src=".\images\productos\gif3.gif" class="gif3">
                    <div class="category-name">
                        <a href="/products"><p>MANGA & ANIME</p></a>
                    </div>
                </div>
                <div>
                    <img src=".\images\productos\gif4.gif" class="gif4">
                    <div class="category-name">
                        <a href="/products"><p>LIBROS</p></a>
                    </div>
                </div>
            </div>
        </section>


<!-- -------------------------------- ABOUT -------------------------------- -->
        <section id="about">
            <div class="options">
                <div class="info">

                    <div class="opciones-pago">  
                        <a href="#"><i class="fas fa-credit-card"></i></a>
                        <p>Opciones de pago</p>
                    </div>
                    
                    <div class="opciones-envio">
                        <a href="#"><i class="fas fa-truck"></i></a>
                        <p>Opciones de envio</p>
                    </div>

                    <div class="politica">
                        <a href="#"><i class="fas fa-file-alt"></i></a>
                        <p>Pol√≠tica de devoluciones</p>
                    </div>

                    <div class="nosotros">
                        <a href="#"><i class="fas fa-users"></i></a>
                        <p>Acerca de nosotros</p>
                    </div>

                </div>


<!-- -------------------------------- MENU --------------------------------- -->
                <nav>
                    <div class="navigation">
                        <ul>
                
                            <li class="list active" data-color="#f53b57">
                                <a href="/">
                                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                                    <span id="title" class="title">Home</span>
                                </a>
                            </li>
                
                            <li class="list" data-color="#f53b57">
                                <a href="/products">
                                    <span class="icon"><ion-icon name="storefront-outline"></ion-icon></span>
                                    <span id="title" class="title">Store</span>
                                </a>
                            </li>
                
                            <li class="list" data-color="#f53b57">
                                <a href="/productCart">
                                    <span class="icon"><ion-icon name="cart-outline"></ion-icon></span>
                                    <span id="title" class="title">Carrito</span>
                                </a>
                            </li>
                
                            <li class="list" data-color="#f53b57">
                                <a href="#">
                                    <span class="icon"><ion-icon name="search-outline"></ion-icon></span>
                                    <span id="title" class="title">Search</span>
                                </a>
                            </li>
                
                            <li class="list" data-color="#f53b57">
                                <a href="/register">
                                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                                    <span id="title" class="title">Perfil</span>
                                </a>
                            </li>
                
                            <div class="indicator"></div>
                
                        </ul>
                    </div>
                </nav>
            </div>
        </section>
    </main>

    <footer>
