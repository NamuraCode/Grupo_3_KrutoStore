<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sing up</title>
    <link rel="stylesheet" href="./css/register.css">
    <link rel="shortcut icon" href="./images/logos/FAVICON_2_ROJO.png" type="image/png">
    <script src="https://code.iconify.design/2/2.0.4/iconify.min.js"></script>
</head>
<body>
    <header>
        <section>
            <div class="top-bar">""
            </div>
            <div class="logo-kruto">
                <!-- <img class="mascota" src=".\images\logos\MASCOTA_BLANCO.png"> -->
                <a href="/"><img class="logo" src=".\images\logos\logo-kruto-rojo.png" alt="kruto_rojo"></a>
            </div>
        </section>
    </header>

<!-- ----------------------------- FORMULARIO ------------------------------ -->
    <main>
        <div class="hero">
            <div class="form-box">
                <div class="button-box">
                    <div id="btn"></div>
                    <button type="button" class="toggle-btn" onclick="login()">Login</button>
                    <button type="button" class="toggle-btn" onclick="register()">Sing Up</button>
                </div>
                <div class="social-icons">
                    <img src="./images/productos/google.png">
                    <img src="./images/productos/facebook.png">
                    <img src="./images/productos/twitter.png">
                </div>
                <!-- ------------------------------ REGISTER ------------------------------- -->
                <form id="register" action="#" class="input-group">
                    <input type="text" class="input-field" placeholder="username" required>
                    <input type="email" class="input-field" placeholder="email" required>
                    <input type="password" class="input-field" placeholder="password" required>
                    <input type="checkbox" class="check-box"><span>I agree the terms & conditions</span>
                    <button type="submit" class="submit-btn">Sign Up</button>
                </form>
            </div>
        </div>
    </main>

<!-- -------------------------------- MENU --------------------------------- -->
    <footer>
        <div class="menu">
            <nav>
                <ul>
                    <li><a href="/index"><span class="iconify" data-icon="cil:home"></span></a></li>
                    <li><a href="/products"><span class="iconify" data-icon="bx:bx-store"></span></a></li>
                    <li><a href="/productCart"><span class="iconify"
                                    data-icon="ic:baseline-local-grocery-store"></span></a></li>
                    <li><a href="#"><span class="iconify" data-icon="ant-design:search-outlined"></span></a></li>
                    <li><a href="/login"><span class="iconify" data-icon="gg:profile"></span></a></li>
                </ul>
            </nav>
        </div>
    </footer>
</body>
</html>